{
  "name": "saving-grace-api",
  "version": "1.0.0",
  "description": "API for Saving Grace application",
  "main": "build/server.js",
  "scripts": {
    "test": "jest",
    "start:watch": "tsc --watch & nodemon --experimental-specifier-resolution=node build/server.js",
    "build": "rm -rf build && tsc",
    "start": "tsc && node --experimental-specifier-resolution=node build/server.js",
    "prettier": "prettier --check \"src/**/*\"",
    "prettier:fix": "prettier --check \"src/**/*\" --write",
    "lint": "eslint src/**/*.ts",
    "check": "npm run lint && npm run prettier && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HACKATONA-ES-2020/embrasacodigo.git"
  },
  "type": "module",
  "keywords": [
    "API",
    "Node",
    "Express",
    "MVC",
    "TypeScript"
  ],
  "author": "Rafael Lopes Schneider",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/HACKATONA-ES-2020/embrasacodigo/issues"
  },
  "homepage": "https://github.com/HACKATONA-ES-2020/embrasacodigo#readme",
  "dependencies": {
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.8",
    "@types/lodash": "^4.14.161",
    "@types/node": "^14.11.2",
    "chalk": "^4.1.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "knex": "^0.21.5",
    "lodash": "^4.17.20",
    "mysql": "^2.18.1",
    "typescript": "^4.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@types/jest": "^26.0.14",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "babel-jest": "^26.3.0",
    "eslint": "^7.9.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run check"
    }
  },
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "arrowParens": "always",
    "jsxBracketSameLine": true,
    "jsxSingleQuote": true,
    "printWidth": 80,
    "useTabs": false
  }
}
